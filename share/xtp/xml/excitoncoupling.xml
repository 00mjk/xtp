<options>

<excitoncoupling help="Exciton couplings from serialized orbital files" section="sec:bsecoupling">
        <use_classical help="Calculate Couplings from classical charges instead of ab-initio" default="false" choices="bool"></use_classical>
        <mpsA help="classical transition charges for segment A"></mpsA>
        <mpsB help="classical transition charges for segment B"></mpsB>
        <output help="Output file" default="votca_excitoncoupling.xml"></output>
        <bsecoupling_options help="nested xml file with options for bse coupling calculations">

                <spin help="Spin type for couplings" default="all" choices="singlet,triplet,all"></spin>
                <degeneracy help="Criterium for the degeneracy of two levels" unit="eV" default="0" choices="float"></degeneracy>

                <moleculeA help="Properties of molecule A">
                        <states help="Number of excitons considered" default="5" choices="int+"></states>
                        <occLevels help="occupied levels for CTstates" default="5" choices="int+"></occLevels>
                        <unoccLevels help="unoccupied levels for CTstates" default="5" choices="int+"></unoccLevels>
                </moleculeA>

                <moleculeB help="Properties of molecule B">
                        <states help="Number of excitons considered" default="5" choices="int+"></states>
                        <occLevels help="occupied levels for CTstates" default="5" choices="int+"></occLevels>
                        <unoccLevels help="unoccupied levels for CTstates" default="5" choices="int+"></unoccLevels>
                </moleculeB>

        </bsecoupling_options>
        <orbitalsA help="Serialized orbitals file" default="A.orb"></orbitalsA>
        <orbitalsB help="Serialized orbitals file" default="B.orb"></orbitalsB>
        <orbitalsAB help="Serialized orbitals file" default="AB.orb"></orbitalsAB>

</excitoncoupling>

</options>
