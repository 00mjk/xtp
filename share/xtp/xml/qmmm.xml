<options>
    <qmmm help="Executes qmmm calculations for individual molecules and clusters" section="sec:qmmm">
        <print_regions_pdb>true</print_regions_pdb>
        <max_iterations>50</max_iterations>
        <openmp_threads>1</openmp_threads>
        <map_file>map.xml</map_file>
        <write_parse>
            <states>n e h s t</states>
            <mm_qm>mm</mm_qm>
        </write_parse>
        
        <regions>
            <region>
                <id>0</id>
                <type>gwbse</type>
                <options_dft />
                <options_gwbse />
                <filter />
                <segments>0:n 1:n 2:n 3</segments>
            </region>
            <region>
                <id>1</id>
                <type>dft</type>
                <options_dft />
                <segments>jobfile</segments>
            </region>
            <region>
                <id>2</id>
                <type>polar</type>
                <options_polar>polar.xml</options_polar>
                <cutoff>
                    <relative_to_explicit_segs>true</relative_to_explicit_segs>
                    <geometry>n</geometry>
                    <radius>3</radius>
                    <region>0</region>
                </cutoff>
            </region>
            <region>
                <id>3</id>
                <type>static</type>
                <cutoff>
                    <relative_to_explicit_segs>true</relative_to_explicit_segs>
                    <geometry>n</geometry>
                    <radius>3</radius>
                    <region>0</region>
                </cutoff>
            </region>
        </regions>
    </qmmm>

</options>