<options>
    <!-- xtp_tools -e dftgwbse options.xml -->
    <dftgwbse help="Compute electronic excitations using GW-BSE">

        <optimize help="Perform a molecular geometry optimization" default="false" choices="bool">false</optimize>
        <basisset help="Basis set for MOs" default="def2-tzvp">def2-tzvp</basisset>
        <auxbasisset help="Auxiliary basis set for RI" default="aux-def2-tzvp">aux-def2-tzvp</auxbasisset>
        <functional help="Functional name(s) according to LIBXC" default="XC_HYB_GGA_XC_PBEH">XC_HYB_GGA_XC_PBEH</functional>

        <dftpackage>
            <package>
                <name help="Name of the DFT package" default="xtp" choices="xtp,orca">xtp</name>
            </package>
        </dftpackage>

        <gwbse_engine>
            <tasks help="task to compute" default="input,dft,parse,gwbse" choices="[input,dft,parse,gwbse]"></tasks>
            <gwbse_options>
                <gwbse>
	                <ranges help="default: all levels in RPA, 1:2*HOMO in QP and all in BSE; other options: factor,explicit" choices="default,factor,explicit,full"></ranges>
	                <rpamax help="only needed, if ranges is factor or explicit, number of levels in rpa" default=""></rpamax>
	                <qpmin help="only needed, if ranges is factor or explicit, lowest MO to be used in GW" default="" ></qpmin>
	                <qpmax help="only needed, if ranges is factor or explicit, highest MO to be used in GW" default=""></qpmax>
	                <bsemin help="only needed, if ranges is factor or explicit, lowest MO to be used in BSE" default=""></bsemin>
	                <bsemax help="only needed, if ranges is factor or explicit, highest MO to be used in BSE" default=""></bsemax>
	                <vxc help="Exchange correlation functional computation for GW">
		                <grid help="grid quality" default="medium" choices="xcoarse,coarse,medium,fine,xfine"></grid>
	                </vxc>
	                <scissor_shift help="preshift unoccupied MOs by a constant for GW calculation" default="0.0" unit="hartree" choices="float"></scissor_shift>
	                <mode help="use single short (G0W0) or self-consistent GW (evGW)" default="evGW" choices="evGW,G0W0"></mode>
	                <tasks help="tasks to do" default="gw,singlets" choices="[gw,singlets,triplets,all]"></tasks>
	                <sigma_integrator help="self-energy correlation integration method" default="ppm" choices="ppm, exact"></sigma_integrator>
	                <eta help="small parameter eta of the Green's function" default="1e-3" unit="Hartree" choices="float+"></eta>
	                <qp_solver help="QP equation solve method" default="grid" choices="fixedpoint,grid"></qp_solver>
	                <qp_grid_steps help="number of QP grid points" default="1001" choices="int+"></qp_grid_steps>
	                <qp_grid_spacing help="spacing of QP grid points" unit="Hartree" default="0.001" choices="float+"></qp_grid_spacing>
	                <exctotal help="maximum number of BSE states to calculate" default="30" choices="int+"></exctotal>
	                <useTDA help="use TDA for BSE" default="false" choices="bool"></useTDA>
	                <ignore_corelevels help="exclude core MO level from calculation on RPA,GW or BSE level" default="no" choices="RPA,GW,BSE,no"></ignore_corelevels>
	                <eigensolver help="options for BSE eigenvalue decompostion">
		                <dodavidson help="use davidson solver" default="true" choices="bool"></dodavidson>
		                <davidson_correction help="Davidson correction method" default="DPR" choices="DPR,OHLSEN"></davidson_correction>
		                <davidson_tolerance help="Numerical tolerance" default="normal" choices="loose,normal,strict"></davidson_tolerance>
		                <davidson_ortho help="orthogonalisation routine: Gramâ€“Schmidt or QR" default="GS" choices="GS,QR"></davidson_ortho>
		                <davidson_update help=" how large the search space" default="safe" choices="min,safe,max"></davidson_update>
		                <davidson_maxiter help="max iterations" default="50" choices="int+"></davidson_maxiter>
		                <domatrixfree help="solve without explicitly setting up BSE matrix, (slower but a lot less memory required" default="true" choices="bool">false</domatrixfree>
	                </eigensolver>
	                <gw_sc_max_iterations help="Maximum number of iterations in eVGW" default="50" choices="int+"></gw_sc_max_iterations>
	                <gw_mixing_order help="Mixing of QP energies in evGW - 0: plain, 1: linear, >1: Anderson" default="20" choices="int+"></gw_mixing_order>
                    <gw_sc_limit help="evGW convergence criteria" unit="Hartree" default="1e-5" choices="float+"></gw_sc_limit>
	                <gw_mixing_alpha help="mixing alpha, also linear mixing" default="0.7" choices="float+"></gw_mixing_alpha>
                    <g_sc_max_iterations help="maximum number of iterations for quasiparticle equation solution" default="100" choices="int+"></g_sc_max_iterations>
                    <g_sc_limit help="quasiparticle equation solver convergence" unit="Hartree" default="1e-5" choices="float+"></g_sc_limit>
	                <use_Hqp_offdiag help="Using symmetrized off-diagonal elements of QP Hamiltonian in BSE" default="false" choices="bool"></use_Hqp_offdiag>
                    <sigma_plot_states help="plot sigma(omega) for the following states, e.g 1 3 5"></sigma_plot_states>
                    <sigma_plot_steps help="points to plot" default="201" choices="int+"></sigma_plot_steps>
                    <sigma_plot_spacing help="spacing of points units" default="1e-2" unit="Hartree" choices="float+"></sigma_plot_spacing>
                    <sigma_plot_filename hep="File with the sigma plot data" default="QPenergies_sigma.dat"></sigma_plot_filename>
                    <bse_print_weight help="print exciton WF composition weight larger than minimum" default="0.5" choices="float+"></bse_print_weight>
                    <rebuild_threecenter_freq help="how often the 3c integrals in iterate should be rebuilt" default="5" choices="int+"></rebuild_threecenter_freq>
                    <exctotal help="number of eigenvectors to calculate" default="5" choices="int+"></exctotal>
                    <ignore_corelevels help="" default="none" choices="none,RPA,BSE,GW"></ignore_corelevels>
                </gwbse>
            </gwbse_options>
            <redirect_logger help="Redirect Logger" default="false" choices="bool"></redirect_logger>
        </gwbse_engine>

        <geometry_optimization help="geometry optimization options">
            <state help="initial state to optimize for" default="s1"></state>
            <maxiter help="Maximum iteration number" default="50" choices="int+"></maxiter>
            <trajectory_file help="File to write trajectory" default="optimisation.trj"></trajectory_file>
            <statetracker help="tries to identify state without looking at the energy">
                <oscillatorstrength default="0.0001" choices="float+"></oscillatorstrength>
                <filters help="property to track" default="oscillatorstrength" choices="[chargetransfer,density,localisation,oscillatorstrength,overlap]"></filters>
            </statetracker>
            <convergence help="Convergence criteria for geometry optimization">
                <energy help="Energy error tolerance" unit="Hartree" default="1.e-6"  choices="float+"></energy>
                <RMSForce help="Force Root mean square error tolerance" unit="Hartree/Bohr" default="3.e-5" choices="float+"></RMSForce>
                <MaxForce help="Maximum force Convergence criteria" unit="Hartree/Bohr" default="1.e-4" choices="float+"></MaxForce>
                <RMSStep help="Step Root mean square error tolerance" unit="Bohr" default="6.e-4" choices="float+"></RMSStep>
                <MaxStep help="convergence criteria for geometry optimisation" unit="Bohr" default="1.e-3" choices="float+"></MaxStep>
            </convergence>
            <optimizer help="optimiser method">
                <method default="BFGS-TRM" choices="BFGS-TRM"></method>
                <trust help="initial trustregion" unit="Angstrom" default="0.01" choices="float+"></trust>
            </optimizer>
            <forces>
                <method help="finite differences method, central or forward" default="central" choices="central forward"></method>
                <CoMforce_removal help="Remove total force on molecule" default="true" choices="bool"></CoMforce_removal>
                <displacement help="finite difference displacement" unit="Angstrom" default="0.001" choices="float+"></displacement>
            </forces>
        </geometry_optimization>
    </dftgwbse>

</options>
