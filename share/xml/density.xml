<options>

<!-- ctp_run -e density -f state.db -o options.xml -->
<density help="Density and site energy profiles" label="calc:density">

	<density_type help="What centers of mass to use: 'segments' or 'atoms'" default="segments">segments</density_type>
	<axis help="Axis along which to calculate density and energy profile">0.0 0.0 1.0</axis>
	<auto_bin help="'0' for manual binning using min and max, '1' for automated" default="1">1</auto_bin>
	<resolution help="Spatial resolution of the profile" unit="nm" default="0.1">0.1</resolution>
	<min help="Minimal distance for manual binning" unit="nm">-10</min>
	<max help="Maximal distance for manual binning" unit="nm">10</max>
	<first help="ID of the first segment" default="1">1</first>
	<last help="ID of the last segment, -1 is the list end" default="-1">-1</last>
	<output help="Density profile file">density.dat</output>
	<output_e help="Energy profile file">energy.dat</output_e>

</density>

</options>
